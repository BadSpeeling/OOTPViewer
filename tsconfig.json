{ 
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["ES2021","ES2021.Promise","ES2022.Error","DOM"]
  },
  "include": ["src/**/*"],
  "exclude": [ "node_modules", "src/renderer/*" ] 
}